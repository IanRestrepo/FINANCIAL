---
interface Props{
    balance: string,
    cardPurpose: string;
    isLoss: boolean;
    CardID: string;
}

const { balance, cardPurpose, isLoss, CardID } = Astro.props;
---
<article class="flex items-center gap-4 rounded-lg border border-gray-900 bg-slate-950 p-6 w-96">
    <span
    class={ !isLoss ? 'rounded-full bg-blue-900 p-3 text-blue-600' : 'rounded-full bg-red-900 p-3 text-red-600'}>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"
        />
      </svg>
    </span>
  
    <div>
      <p
      id={ CardID } 
      class={ !isLoss ? 'text-2xl font-medium text-gray-100' : 'text-2xl font-medium text-red-700'}>${ balance }</p>
  
      <p class="text-sm text-gray-500">{ cardPurpose }</p>
    </div>
  </article>